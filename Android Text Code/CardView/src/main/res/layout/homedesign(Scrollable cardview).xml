<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:padding="10dp"
     android:background="#fcfcfc"
     android:gravity="center"
     android:id="@+id/ll">

      <LinearLayout
          android:clipToPadding="false"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:id="@+id/memberId"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/circulabackground2"
                      android:padding="10dp"
                      android:src="@drawable/teamwork" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="10dp"
                      android:background="@color/lightgray" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="All Member"
                      android:textStyle="bold" />
              </LinearLayout>
          </android.support.v7.widget.CardView>
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:id="@+id/padmapanel"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center">

                  <ImageView
                      android:id="@+id/imageView2"
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/circlebackground1"
                      android:padding="10dp"
                      android:src="@drawable/meeting" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/lightgray"
                      android:layout_margin="10dp"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:layout_marginTop="10dp"
                      android:text="Padma panel"/>
              </LinearLayout>
          </android.support.v7.widget.CardView>

      </LinearLayout>
      <LinearLayout
          android:clipToPadding="false"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:id="@+id/gallery"
              android:clickable="true"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center">
                  <ImageView
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/cercleshape"
                      android:src="@drawable/gallery"
                      android:padding="10dp"/>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/lightgray"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:layout_marginTop="10dp"
                      android:text="Image Gallery"/>

              </LinearLayout>
          </android.support.v7.widget.CardView>
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:id="@+id/coaching"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imageView4"
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/circularbackground3"
                      android:padding="10dp"
                      android:src="@drawable/education" />


                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="10dp"
                      android:background="@color/lightgray" />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Coaching Panel"
                      android:textStyle="bold" />

              </LinearLayout>
          </android.support.v7.widget.CardView>

      </LinearLayout>
      <LinearLayout
          android:clipToPadding="false"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:id="@+id/notice"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">

              <LinearLayout

                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/circulebackground"
                      android:padding="10dp"
                      android:src="@drawable/question" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="10dp"
                      android:background="@color/lightgray" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Padma Info"
                      android:textStyle="bold" />

              </LinearLayout>
          </android.support.v7.widget.CardView>
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              android:id="@+id/notifi"
              android:clickable="true"
              android:layout_width="160dp"
              android:layout_height="150dp"
              android:layout_margin="4dp">

              <LinearLayout

                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imageView3"
                      android:layout_width="72dp"
                      android:layout_height="72dp"
                      android:background="@drawable/circularbackground"
                      android:padding="10dp"
                      android:src="@drawable/notification" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="10dp"
                      android:background="@color/lightgray" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Show Notices"
                      android:textStyle="bold" />

              </LinearLayout>
          </android.support.v7.widget.CardView>


      </LinearLayout>

  </LinearLayout>
</ScrollView>
